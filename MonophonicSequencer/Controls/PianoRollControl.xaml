<UserControl
  x:Class="MonophonicSequencer.Controls.PianoRollControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:MonophonicSequencer.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MonophonicSequencer"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <!--<UserControl.Resources>
    <controls:MidiOut x:Key="out"></controls:MidiOut>
  </UserControl.Resources>-->

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border Background="Gray">
      <!--<Image Source="IMG_1771.PNG" />-->
    </Border>

    <ScrollViewer
      x:Name="scrollViewer"
      Grid.Column="1"
      HorizontalScrollBarVisibility="Visible"
      VerticalScrollBarVisibility="Hidden">
      <controls:PianoRollGrid x:Name="piano" Width="3200" />
    </ScrollViewer>
  </Grid>
</UserControl>
