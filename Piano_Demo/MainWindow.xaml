<Window
  x:Class="Piano_Demo.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:MonophonicSequencer.Controls;assembly=MonophonicSequencer.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Piano_Demo"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="800"
  Height="450"
  Background="#FFC1C0C6"
  mc:Ignorable="d">
  <Grid>
    <Rectangle />
    <StackPanel controls:Piano.FirstNote="48"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Orientation="Horizontal">
      <controls:WhiteKey Content="C4" />
      <controls:BlackKey />
      <controls:WhiteKey />
      <controls:BlackKey />
      <controls:WhiteKey />
      <controls:WhiteKey />
      <controls:BlackKey />
      <controls:WhiteKey />
      <controls:BlackKey />
      <controls:WhiteKey />
      <controls:BlackKey />
      <controls:WhiteKey />
    </StackPanel>
  </Grid>
</Window>
